<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<GridPane
          fx:controller="students.MainController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="10" bottom="10" left="10" right="10"/>
    </padding>
    <TableView fx:id="tblStudents" GridPane.rowIndex="1" GridPane.columnIndex="0">
    <columns>
        <TableColumn text="Firstname" prefWidth="100">
            <cellValueFactory>
                <PropertyValueFactory property="firstName"/>
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="Lastname" prefWidth="100">
            <cellValueFactory>
                <PropertyValueFactory property="lastName"/>
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="StudentID" prefWidth="100">
            <cellValueFactory>
                <PropertyValueFactory property="studentID"/>
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="Login" prefWidth="100">
            <cellValueFactory>
                <PropertyValueFactory property="Login"/>
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="Password" prefWidth="100">
            <cellValueFactory>
                <PropertyValueFactory property="Password"/>
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="Role" prefWidth="100">
            <cellValueFactory>
                <PropertyValueFactory property="role"/>
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="Status" prefWidth="100">
            <cellValueFactory>
                <PropertyValueFactory property="Status"/>
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="Fine" prefWidth="100">
            <cellValueFactory>
                <PropertyValueFactory property="Fine"/>
            </cellValueFactory>
        </TableColumn>
    </columns>
    </TableView>
    <VBox spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="1">
        <TextField fx:id="txtFirstname" promptText="Firstname" prefWidth="100"/>
        <TextField fx:id="txtLastname" promptText="Lastname" prefWidth="100"/>
        <TextField fx:id="txtStudentID" promptText="StudentID" prefWidth="100"/>
        <TextField fx:id="txtLogin" promptText="Login" prefWidth="100"/>
        <TextField fx:id="txtPassword" promptText="Password" prefWidth="100"/>
        <TextField fx:id="txtRoles" promptText="Roles" prefWidth="100"/>
<!--        <TextField fx:id="txtStatus" promptText="Status" prefWidth="100"/>-->
        <TextField fx:id="txtFine" promptText="Fine" prefWidth="100"/>
    </VBox>
    <HBox GridPane.rowIndex="2" GridPane.columnIndex="1">
        <Button text="View" onAction="#viewStudent"/>
        <Button text="Add" onAction="#addStudent"/>
        <Button text="Edit" onAction="#editStudent"/>
        <Button text="Delete" onAction="#deleteStudent"/>
    </HBox>
</GridPane>
