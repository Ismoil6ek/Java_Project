<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<GridPane
            fx:controller="librarians.LibrariansController"
            xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="10" bottom="10" left="10" right="10"/>
    </padding>
    <TableView fx:id="tblLibrarians" GridPane.rowIndex="1" GridPane.columnIndex="0">
        <columns>
            <TableColumn text="Name" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="Name"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Login" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="Login"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Password" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="Password"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Role" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="Role"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <VBox spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="1">
        <TextField fx:id="txtName" promptText="Name" prefWidth="100"/>
        <TextField fx:id="txtLogin" promptText="Login" prefWidth="100"/>
        <TextField fx:id="txtPassword" promptText="Password" prefWidth="100"/>
        <TextField fx:id="txtRole" promptText="Role" prefWidth="100"/>
    </VBox>
    <HBox GridPane.rowIndex="2" GridPane.columnIndex="1">
        <Button text="Add" onAction="#addLibrarian"/>
        <Button text="Edit" onAction="#editLibrarian"/>
        <Button text="Delete" onAction="#deleteLibrarian"/>
    </HBox>
</GridPane>
