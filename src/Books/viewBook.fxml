<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="Books.viewController"
          prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <HBox spacing="30" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Label text="Title: "/>
        <Label fx:id="lblTitle"/>
    </HBox>
    <HBox spacing="30" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <Label text="Subject: "/>
        <Label fx:id="lblSubject"/>
    </HBox>
    <HBox spacing="30" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <Label text="Author: "/>
        <Label fx:id="lblAuthor"/>
    </HBox>
    <HBox spacing="30" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <Label text="ISBN: "/>
        <Label fx:id="lblISBN"/>
    </HBox>
    <HBox spacing="30" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <Label text="Date: "/>
        <Label fx:id="lblDate"/>
    </HBox>
    <HBox spacing="30" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <Label text="Borrowed: "/>
        <Label fx:id="lblStudent"/>
    </HBox>
    <HBox spacing="30" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <Label text="Due date: "/>
        <Label fx:id="lblDueDate"/>
    </HBox>
    <HBox GridPane.rowIndex="5" GridPane.columnIndex="0">
        <Button fx:id="btnReturn" onAction="#returnBook" text="Return" />
        <Button fx:id="btnBorrow" onAction="#giveBook" text="Borrow" />
        <ComboBox fx:id="cmbStudents" visible="false" promptText="choose student"/>
    </HBox>
    <HBox spacing="30" GridPane.columnIndex="0" GridPane.rowIndex="7">
        <TextField fx:id="txtDay" promptText="Number of Days"/>
        <TextField fx:id="txtStudent" promptText="Student"/>

    </HBox>
</GridPane>
